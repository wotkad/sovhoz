.wholesale
	padding 100px 0
	z-index 2
	position relative
	&__title
		margin-bottom 68px
		font-family $Heavy
		font-size 2.5rem
		line-height 70px
		text-align center
		color $text
	&__block
		&-container
			&-title
				font-size 1.25rem
				font-family $Bold
				line-height 24px
				margin-bottom 29px
				color $text
			&-text
				font-family $Book
				font-size 1rem
				line-height 28px
				color $text
		&:nth-child(2)
			margin-bottom 60px
			display flex
			position relative
			justify-content space-between
			.wholesale__block-bigimg
				flex-basis 65%
				height 490px
			.wholesale__block-img
				flex-basis 30%
				z-index 1
			.wholesale__block-container
				position absolute
				right 0
				bottom 0
				padding 74px 0 20px 52px
				width 50%
				background-color $white
		&:nth-child(3)
			display flex
			position relative
			justify-content space-between
			.wholesale__block-bigimg
				flex-basis 65%
				height 490px
				order 2
			.wholesale__block-img
				flex-basis 30%
				order 1
				z-index 1
			.wholesale__block-container
				position absolute
				left 0
				bottom 0
				padding 74px 52px 20px 0
				width 50%
				background-color $white
@media(max-width: 991px)
	.wholesale
		padding 40px 0
@media(max-width: 768px)
	.wholesale
		&__title
			margin-bottom 30px
		&__block
			&:nth-child(2)
				margin-bottom 0
				display flex
				position relative
				flex-wrap wrap
				justify-content space-between
				.wholesale__block-bigimg
					flex-basis 100%
					height 200px
				.wholesale__block-img
					display none
				.wholesale__block-container
					position relative
					padding 25px 20px
					width 90%
					background-color $white
					margin-top -50px
			&:nth-child(3)
				display flex
				position relative
				flex-wrap wrap
				justify-content space-between
				.wholesale__block-bigimg
					flex-basis 100%
					height 200px
					order 0
				.wholesale__block-img
					display none
				.wholesale__block-container
					margin-top -50px
					position relative
					padding 25px 20px
					width 90%
					margin-left 10%
					background-color $white
