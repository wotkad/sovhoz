.h
	background url(/images/home-bg.png) 50% 50% no-repeat
	background-size cover
	width 100%
	height 100vh
	display flex
	position relative
	align-items center
	.berry1
		position absolute
		bottom 0
		left 0
	.home
		display flex
		justify-content space-between
		position relative
		align-items center
		&__line
			position absolute
			font-family $Light
			font-size 1rem
			line-height 32px
			right 0%
			bottom 20%
			transform rotate(-90deg)
			color $text
			&:after
				content ''
				position absolute
				right 130px
				bottom 13px
				width 80px
				height 1px
				background $text
			& svg
				margin-left 22px
				transform rotate(90deg)
				max-width 19px
				width 19px
				position absolute
				bottom 5px
		&__block
			&:nth-child(1)
				flex-basis 50%
				z-index 1
				position relative
			&:nth-child(2)
				flex-basis 50%
				position absolute
				right -17%
				& img
					width 100%
			&-title
				margin-top 50px
				&-text
					font-family $Heavy
					font-size 2.75rem
					color $text
					line-height 54px
					margin-bottom 50px
				&-desc
					font-family $Book
					font-size 1.125rem
					line-height 32px
					color $tet
					margin-bottom 50px
			&-wholesale
				margin-bottom 75px
				display flex
				align-items center
				& svg
					max-width 30px
					max-height 30px
					margin-right 16px
					height 30px
					width 30px
				& a
					font-family $Bold
					font-size 1.125rem
					line-height 24px
					color $text
					transition .3s
					&:hover
						color $red
			&-buttons
				display flex
				&-button
					border-radius 10px
					background-color $white
					box-shadow 11px 0 65px rgba(76, 43, 43, .13);
					padding 26px 16px
					width 226px
					overflow hidden
					position relative
					cursor pointer
					transition .3s
					&:hover
						transform scale(1.1)
					&:nth-child(1)
						margin-right 25px
						.home__block-buttons-button__img
							bottom 10%
							right -5%
							transform scale(1.3)
					&:nth-child(2)
						.home__block-buttons-button__img
							bottom 10%
							right -2%
					&__title
						font-family $Bold
						font-size 1.5rem
						color $text
						line-height 28px
						margin-bottom 10px
					&__img
						width 125px
						height 93px
						position absolute
						& img
							width 100%
					&__link
						display flex
						align-items center
						justify-content center
						border-radius 50%
						border 1px solid $text
						color $text
						width 30px
						height 30px
						& i
							font-size 12px
@media(max-width: 768px)
	.h
		.berry1
			display none
		.home
			flex-wrap wrap
			&__block
				&:nth-child(1)
					flex-basis 100%
				&:nth-child(2)
					flex-basis 100%
					position relative
					& img
						width 150%
						margin-left -42.5%
				&-wholesale
					display none
				&-title
					margin-top 50px
					&-text
						text-align center
						margin-bottom 0
						font-size 1.5rem
						line-height 32px
					&-desc
						display none
				&-buttons
					display none
			&__line
				display none
