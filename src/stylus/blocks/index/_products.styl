.products
	padding 100px 0
	position relative
	z-index 10
	.leaves1
		position absolute
		left 0
		bottom -150px
		z-index 1
	.leaves2
		position absolute
		right 0
		top -150px
		z-index 1
	&__titles
		z-index 2
		position relative
		margin-bottom 57px
		display flex
		justify-content center
		align-items center
		flex-direction column
		.leave
			position absolute
			top 0
			right -2%
		&-img
			margin-bottom 23px
		&-text
			font-size 2.5rem
			font-family $Heavy
			line-height 42px
			color $text
	&__blocks
		padding 0 25px
		position relative
		z-index 2
		display flex
		align-items flex-start
		.products__text
			position absolute
			font-family $Light
			font-size 1rem
			line-height 32px
			left -19%
			bottom 40%
			transform rotate(-90deg)
			color $text
			&:after
				content ''
				position absolute
				right -100px
				bottom 13px
				width 80px
				height 1px
				background $text
		.products__block
			height 558px
			width 100%
			flex-basis calc(33.33334% - 30px)
			margin-right 30px
			position relative
			border-radius 7px
			z-index 10
			margin-bottom 17px
			&:nth-child(3)
				margin-right 0
			.products__container
				position absolute
				background-color $white
				flex-basis calc(33.33334% - 30px)
				border-radius 7px
				display flex
				border 1px solid #eaeaea
				flex-wrap wrap
				justify-content space-between
				padding 10px 25px 25px 25px
				transition box-shadow .3s
				&:hover
					box-shadow 10px 0 100px #eaeaea
				&-active
					.products__block-text
						height 100%
					.products__block-toggle
						&:after
							content 'Закрыть'
			&:hover
				border-color transparent
			&-img
				flex-basis 100%
				height 268px
				& img
					width 100%
			&-title
				flex-basis 100%
				font-family $Bold
				font-size 1.25rem
				color $text
				line-height 32px
				margin-bottom 15px
			&-prop
				flex-basis 100%
				font-family $Book
				font-size 1rem
				line-height 30px
				color $text
			&-text
				margin 15px 0 0
				flex-basis 100%
				height 0
				overflow hidden
				font-family $Book
				font-size 0.9rem
				line-height 30px
				color $text
				&-link
					cursor pointer
					font-family $Book
					font-size 0.9rem
					line-height 24px
					flex-basis 100%
					transition .3s
					& span
						border-bottom 1px dotted $text
					& i
						font-size 12px
						margin-left 4px
					&:hover
						color $red
			&-price
				flex-basis 35%
				font-size 1.5rem
				line-height 32px
				color $text
				margin-top 15px
				font-family $Bold
				margin-bottom 19px
			&-toggle
				display flex
				flex-basis 54%
				padding 6px
				align-items center
				justify-content center
				border-radius 26px
				border 1px solid #eee
				cursor pointer
				position relative
				color #666
				margin-top 8px
				font-family $Book
				font-size 0.825rem
				line-height 32px
				text-transform uppercase
				margin-bottom 12px
				transition .3s
				&:hover
					background-color #666666
					color $white
				&:after
					position absolute
					display inline-block
					content 'Открыть'
			&-counts
				display flex
				align-items center
				justify-content center
				flex-basis 35%
				.products__block-count
					background-color #f5f6f8
					border-radius 15px
					width 100%
					justify-content space-between
					height 31px
					padding 0 10px
					display flex
					align-items center
					&-number
						padding 0 24px
						font-family $Regular
						font-size 1rem
						line-height 32px
						color #77695d
					& i
						cursor pointer
						color #77695d
						margin-top 4px
			&-button
				display flex
				flex-basis 54%
				padding 6px
				align-items center
				justify-content center
				border-radius 26px
				border 1px solid #ff7999
				cursor pointer
				transition .3s
				&:hover
					background-color #ff7999
				&:hover span
					color $white
				& svg
					max-width 23px
					& path
						fill #ff7999
						transition .3s
				&:hover svg path
					fill $white
				& span
					transition .3s
					margin-left 14px
					color #ff7999
					font-family $Book
					font-size 0.825rem
					line-height 32px
					text-transform uppercase
@media(max-width: 991px)
	.products
		padding 40px 0 0 0
		&__titles
			margin-bottom 30px
		.leaves1
			display none
		.leaves2
			display none
		.leave
			display none
		&__text
			display none
		&__blocks
			padding 0
			flex-wrap wrap
			.products__block
				height 588px
				flex-basis 100%
				margin-right 0
				&:nth-child(1)
					z-index 3
				&:nth-child(2)
					z-index 2
				&:nth-child(3)
					z-index 1
				.products__container
					flex-basis 100%
