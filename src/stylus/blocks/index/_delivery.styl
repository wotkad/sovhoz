.delivery
	padding 100px 0
	&__titles
		display flex
		justify-content center
		align-items center
		flex-wrap wrap
		margin-bottom 50px
		&-title
			font-family $Heavy
			font-size 2.5rem
			line-height 70px
			text-align center
			flex-basis 100%
			margin-bottom 32px
			color $text
		&-desc
			color $text
			text-align center
			flex-basis 100%
			font-family $Light
			font-size 1.125rem
			line-height 26px
	&__blocks
		display flex
	&__block
		flex-basis 25%
		z-index 6
		margin-right 24px
		padding 24px
		flex-wrap wrap
		background-color $white
		box-shadow 10px 0 100px #eaeaea
		&:nth-child(4)
			margin-right 0
		&-img
			display flex
			align-items center
			justify-content center
			margin-bottom 15px
			height 150px
			& img
				width 80%
		&-title
			font-size 1.5rem
			line-height 20px
			text-align center
			color $text
			font-family $Bold
			margin-bottom 23px
		&-text
			font-size 0.825rem
			text-align center
			line-height 24px
			font-family $Light
			color $text
@media(max-width: 991px)
	.delivery
		padding 40px 0
		&__blocks
			flex-wrap wrap
		&__block
			margin-bottom 18px
			flex-basis calc(50% - 12px)
			&:nth-child(2n+1)
				margin-right 24px
			&:nth-child(2n)
				margin-right 0
			&-img
				& img
					width 50%
@media(max-width: 600px)
	.delivery
		&__titles
			margin-bottom 30px
		&__blocks
			flex-wrap wrap
		&__block
			margin-bottom 18px
			flex-basis 100%
			&:nth-child(2n+1)
				margin-right 0
			&:nth-child(2n)
				margin-right 0
			&-img
				& img
					width 50%
